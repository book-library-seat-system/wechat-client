<!--pages/mainPage/mainPage.wxml-->
<view class="header">
<text>欢迎来到图书馆座位预约系统\n\n</text>
  <text>选择时间开始预约</text>
</view>

<view class="mainArea">
<view class="section">  
  <picker mode="time" value="{{time}}" start="08:00" end="21:00" bindchange="bindStartTimeChange">  
    <view class="picker">  
     开始时间 : {{startTimes}}
    </view>  
  </picker>  
</view>  
<view class="section">  
  <picker mode="time" value="{{time}}" start="09:00" end="22:00" bindchange="bindEndTimeChange">  
    <view class="picker">  
     结束时间 : {{endTimes}}
    </view>  
  </picker>  
</view> 
<view class="section">  
  <picker mode="date" value="{{start_date}}" start="{{start_date}}" end="{{end_date}}" bindchange="bindDateChange">  
    <view class="picker">  
      日期: {{dates}}  
    </view>  
  </picker>  
</view>
  <button bindtap='startReserve' class="btn">开始预约</button>
  <button bindtap='checkIn' class="btn">扫码签到</button>
</view>
