/* pages/selectSeat/selectSeat.wxss */
.header {
  width: 100%;
  position: fixed;
  top:0%;
  background: #FFFFFF;
  text-align: center;
  backface-visibility: 0;
  z-index: 2;
  height: 22%;
}

.seat {
  height: 20px;
  width: 20px;
  margin: 10px;
}

.row {
  display: flex;
  flex-direction: row;
  align-content: center;
  width: 100%;
}


.overAll {
  align-content: center;
  align-items: center;
  align-self: center;
  width: 100%;
}

.baseBar {
  position: fixed;
  bottom:0; 
  background-color: #F5F5F5;
  width: 100%;
  height: 155px;
}

.randomChoose {
  margin-top: 10px;
  margin-bottom: 5px;
  width: 250px;
  height: 50px;
  border-radius: 25px;
  background-color: #FFC125;
  color: white;
  border: 1px solid #FFC125;
}

.checkButton {
  margin-top: 5px; 
  width: 250px;
  height: 50px;
  border-radius: 25px;
  background-color: #FFC125;
  color: white;
  border: 1px solid #FFC125;
  disable: true;
}

.seatTable {
  height: 25px;
  width: 28px;
  margin: 5px 15px;
  padding: 0px 0px;
  font-size: 14.5px;
}

.buttonHover {
  background-color: #FF0000;
}

.selectTime {
  display: flex;
  flex-direction: center;
}

.selectStartTime {
  margin-left: 37%
}


.seatArea {
  display: flex;
  justify-content: center;
  margin-top: 35%;
  width: 100%;
}

#seatIndicator {
  width: 100%;
  display: flex;
  justify-content: center;
}

.blankSpace {
  width: 100%;
  height: 160px;
}

.status{
  height: 15px;
  width: 15px;
  margin: 0px 12px;
}

.textStatus{
  padding: 0px;
  margin: 0px 5px;
  font-size: 11px;
}

.rowIndicator{
  width: 10px;
  height: 10px;
  position: relative;
  top:14px;
  font-size: 14px;
}

