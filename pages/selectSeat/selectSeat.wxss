/* pages/selectSeat/selectSeat.wxss */
.header {
  width: 100%;
  text-align: center;
}

.seat {
  height: 25px;
  width: 25px;
  margin: 10px;
}

.row {
  display: flex;
  flex-direction: row;
  align-content: center;
}


.overAll {
  align-content: center;
  align-items: center;
  align-self: center;
  width: 100%;
}

.baseBar {
  position: absolute;
  top: 75%;
  left: 0%;
  background-color: #F5F5F5;
  width: 100%;
  height: 200px;
}

.randomChoose {
  width: 250px;
  height: 50px;
  border-radius: 25px;
  background-color: #FFC125;
  color: white;
  border: 1px solid #FFC125;
}

.checkButton {
  margin-top: 5px; 
  width: 250px;
  height: 50px;
  border-radius: 25px;
  background-color: #FFC125;
  color: white;
  border: 1px solid #FFC125;
  disable: true;
}

.seatTable {
  height: 25px;
  width: 25px;
  margin: 10px 17px;
  font-size: 16px;
}

.buttonHover {
  background-color: #FF0000;
}