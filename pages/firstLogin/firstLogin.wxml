<view class = "header">
  <text>欢迎使用图书馆座位预约系统</text>
</view>
<view class = "main">
  <text >首次使用请绑定NetID\n</text>
  <form bindsubmit="formSubmit">
    <view class="line" >
      <text display="id">NetID: </text> 
      <input class="inputID" name="netid" placeholder="请输入NetID"></input>
    </view>
    <view class="line">
      <text class="password">密码:</text> 
      <input class="inputPW" name="pw" password="true" placeholder="请输入密码"></input>
    </view>
    <view class="line">
      <text>学校:</text>  
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{schoolArray}}" class="inputSchool">
        <view class="picker">
          {{schoolArray[index]}}
        </view>
      </picker> 
    </view>
      <button formType="submit">绑定</button>
  </form>
</view>